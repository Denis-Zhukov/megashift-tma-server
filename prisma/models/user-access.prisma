enum AccessClaim {
  READ
  EDIT_SELF
  DELETE_SELF
  EDIT_ALL
  DELETE_ALL
  READ_STATISTICS
}

model UserAccess {
  id      String @id @default(cuid())
  ownerId String
  owner   User   @relation("OwnerAccess", fields: [ownerId], references: [id])

  grantedToId String
  grantedTo   User   @relation("GrantedAccess", fields: [grantedToId], references: [id])

  claim AccessClaim

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([ownerId, grantedToId, claim])
  @@map("user_access")
}
