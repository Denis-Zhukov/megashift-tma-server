enum SalaryType {
  HOURLY
  SHIFT
  MONTHLY
}

enum Currency {
  RUB
  USD
  BYN
  EUR
  KZT
}

model User {
  id         String  @id
  name       String
  surname    String
  patronymic String?

  timezone String @default("UTC")

  salary     Float?
  typeSalary SalaryType?
  maxSalary  Float?
  currency   Currency?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  ownedShiftTemplates   ShiftTemplate[] @relation("OwnedTemplates")
  createdShiftTemplates ShiftTemplate[] @relation("CreatedTemplates")

  ownedShifts   Shift[] @relation("ShiftOwner")
  createdShifts Shift[] @relation("ShiftCreator")

  ownedAccesses   UserAccess[] @relation("OwnerAccess")
  grantedAccesses UserAccess[] @relation("GrantedAccess")

  @@map("users")
}
