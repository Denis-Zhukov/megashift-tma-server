enum SalaryType {
  HOURLY
  SHIFT
  MONTHLY
}

model User {
  id         String  @id
  name       String
  surname    String
  patronymic String?

  timezone String @default("UTC")

  salary     Float?
  typeSalary SalaryType?
  maxSalary  Float       @default(1)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  shiftTemplates ShiftTemplate[]

  ownedShifts   Shift[] @relation("ShiftOwner")
  createdShifts Shift[] @relation("ShiftCreator")

  ownedAccesses   UserAccess[] @relation("OwnerAccess")
  grantedAccesses UserAccess[] @relation("GrantedAccess")

  @@map("users")
}
