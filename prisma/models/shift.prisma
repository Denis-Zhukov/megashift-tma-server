model Shift {
  id String @id @default(uuid())

  ownerId         String  @map("owner_id")
  creatorId       String  @map("creator_id")
  shiftTemplateId String? @map("shift_template_id")

  date DateTime @db.Date

  actualStartTime DateTime? @map("actual_start_time") @db.Time
  actualEndTime   DateTime? @map("actual_end_time") @db.Time

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  wner          User           @relation("ShiftOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  creator       User           @relation("ShiftCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  shiftTemplate ShiftTemplate? @relation(fields: [shiftTemplateId], references: [id], onDelete: SetNull)

  @@index([ownerId, date])
  @@map("shifts")
}
